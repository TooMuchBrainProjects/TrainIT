@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>

<MudLayout>
    <MudMainContent Style="padding: 0;">
        @Body
    </MudMainContent>
    <MudAppBar Bottom="true" Fixed="true" Color="Color.Primary" Elevation="10" Style="height: 7vh">
        <MudContainer Style="display: flex; flex-direction: row; justify-content: space-around">
            <MudIconButton Href="/" Icon="@Icons.Material.Filled.BarChart" Color="Color.Inherit"/>
            <MudIconButton Href="/exercise" Icon="@Icons.Material.Filled.FitnessCenter" Color="Color.Inherit"/>
            <MudIconButton Href="/profile" Icon="@Icons.Material.Filled.Person" Color="Color.Inherit"/>
        </MudContainer>
    </MudAppBar>
</MudLayout>